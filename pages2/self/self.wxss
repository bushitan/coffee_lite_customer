/* pages2/main/main.wxss */
page{
    background-color: var(--yellow)
}

.UCenter-bg {  
  background-size: cover;
  height: 550rpx;
  display: flex;
  justify-content: center;
  /* padding-top: 40rpx; */
  overflow: hidden;
  position: relative;
  flex-direction: column;
  align-items: center;
  color: #fff;
  font-weight: 300;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
}
.UCenter-image{
    width: 750rpx;
    height: 100%;
    position: absolute;
    top:0;
    right:0;
    left: 0;
    bottom: 0;
    z-index: -99
}
.UCenter-bg text {
  opacity: 0.8;
}

.UCenter-bg  .open-data{
    z-index: 999;
}
.UCenter-bg .user_logo {
  width: 200rpx;
  height: 200rpx;
}

.UCenter-bg .gif-wave{
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;  
  height: 100rpx;   
}

map,.mapBox{
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;  
  height: 100rpx;   
}

map,.mapBox{
  width: 750rpx;
  height: 300rpx;
}

/*************头像************/
.user_logo{
    width: 200rpx;
    height: 200rpx;
    border-radius: 50%;
    overflow: hidden;
}
.user_id{
    opacity: 0.8;
}