<!--pages/share/share.wxml-->


<!-- <view class="weui-cells__title">我的集点分享券</view> -->
<view class="weui-panel weui-panel_access">
    <view class="weui-panel__bd">
        <block wx:for="{{detailList}}">
            <view class="weui-media-box weui-media-box_appmsg " hover-class="weui-cell_active">
                <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
                    <image class="weui-media-box__thumb" src="../../images/icon_cup.png" />
                </view>
                <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
                    <view class="weui-media-box__title">福利券</view>
                    <view class="weui-media-box__desc">
                        <view>点击此券分享{{item.alive}}个好友</view>
                        <view>您获得{{store.share_check_value}}点</view>
                        <view>每个好友获得{{store.share_gift_value}}点</view>
                    </view>
                    <view class="weui-media-box__desc">有效时间：{{item.create_time}}</view>
                </view>
                <view class="weui-cell__ft weui-cell__ft_in-access"></view>
                <button 
                    class='share'  
                    open-type='share'
                    data-share_uuid="{{item.uuid}}"
                    data-path="/pages/route/route?mode=share&store_uuid={{store.uuid}}&share_uuid={{item.uuid}}"
                ></button>
                <!-- mode=share&store_uuid=ff1f7ada-63d8-11e9-a3f6-b83312f00bac&share_uuid=92364776-6bf8-11e9-b2b0-b83312f00bac -->
            </view>
        </block>
    </view>
</view>


<view class="weui-loadmore " wx:if="{{isLoading}}" >
    <view class="weui-loadmore">
        <view class="weui-loading"></view>
        <view class="weui-loadmore__tips">正在加载</view>
    </view>
</view>
<view class="weui-loadmore weui-loadmore_line" wx:else >
    <view class="weui-loadmore__tips weui-loadmore__tips_in-line" style='font-size:8pt;top:-1.2em'>
        暂无更多数据
    </view>
</view>
